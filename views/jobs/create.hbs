{{! This page contains code to create new job}}
<link rel='stylesheet' href='/stylesheets/jobCreate.css' />
<h1>{{title}}</h1>

<form method="post">
  {{! Input fields that match fields in my data model }}
  {{! Name and ID correspond to field name in project data model }}
  <fieldset>
    <label for="jobName"> Job Name: </label>
    <input type="text" name="jobName" id="jobName" required />
  </fieldset>
  <fieldset>
    <label for="jobDate">Job Date:</label>
    <input type="date" name="jobDate" id="jobDate" />
  </fieldset>
  <fieldset>
    <label for="jobDescription">Job Description: </label>
    <input type="text" name="jobDescription" id="jobDescription"/>
  </fieldset>
  {{! Add a button to trigger POST action }}
  <button class="btn btn-primary">Save</button>
</form>