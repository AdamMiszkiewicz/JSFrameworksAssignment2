<h1>{{title}}</h1>
<link rel='stylesheet' href='/stylesheets/jobEdit.css' />
<form method="post">
  {{! Input fields that match fields in my data model }}
  {{! Name and ID correspond to field name in project data model }}
  <fieldset>
    <label for="jobName"> Job Name: </label>
    <input type="text" name="jobName" id="jobName" required value="{{job.jobName}}"/>
  </fieldset>
  <fieldset>
    <label for="jobDate">Job Date:</label>
    <input type="date" name="jobDate" id="jobDate" value="{{toShortDate job.jobDate}}"/>
  </fieldset>
  <fieldset>
    <label for="jobDescription">Job Description: </label>
    <input type="text" name="jobDescription" id="jobDescription" value="{{job.jobDescription}}"/>
  </fieldset>
  {{! Add a button to trigger POST action }}
  <button class="btn btn-primary">Save</button>
</form>